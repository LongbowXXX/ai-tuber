{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2023"],
    "moduleResolution": "node",
    "outDir": "dist-electron",
    "rootDir": "electron",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "types": ["node", "electron"]
  },
  "include": ["electron/**/*.ts"]
}
