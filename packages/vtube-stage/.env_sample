# This is a sample .env file. Copy this file to .env and fill in the values.

# Stage Director MCP Configuration
# MCPサーバーがリッスンするホスト（デフォルト: 127.0.0.1）
STAGE_DIRECTOR_MCP_HOST=127.0.0.1
# MCPサーバーがリッスンするポート（デフォルト: 8080）
STAGE_DIRECTOR_MCP_PORT=8080

# VOICEVOX WebAPI のエンドポイントURLを指定してください
VITE_VOICEVOX_API_BASE=http://localhost:50021

# 音声合成(TTS)機能を有効にするかどうか
# false に設定すると音声再生を行わず、ダミーの待機時間のみ発生します（開発用）
VITE_TTS_ENABLED=true

# デバッグ用サイドバーを表示するかどうか
# true に設定すると、アバターやステージの状態を操作できるサイドパネルが表示されます
VITE_DEBUG_SIDEBAR=false